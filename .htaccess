Order Deny,Allow
Deny from all
DirectoryIndex index.php
Options -Indexes
IndexIgnore *

<Files index.php>
    Order Allow,Deny
    Allow from all
</Files>

<Files index.html>
    Order Allow,Deny
    Allow from all
</Files>

<Files api.php>
    Order Allow,Deny
    Allow from all
</Files>

<Files asset.php>
    Order Allow,Deny
    Allow from all
</Files>