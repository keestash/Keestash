<div class="ui two column doubling stackable grid" id="main-container">
    {% if hasAppNavigation == true %}

        <div class="three wide column" id="app-navigation">
            {{ appNavigation|raw }}
        </div>

        <div class="thirteen wide column">
            <div id="breadcrumb__wrapper">
                {{ breadcrumbs|raw }}
            </div>
            <div class="ui basic segment action-bar">
                {{ actionBar|raw }}
            </div>


            {{ appContent|raw }}
        </div>

    {% else %}
        <div class="sixteen wide column">{{ appContent|raw }}</div>
    {% endif %}
</div>