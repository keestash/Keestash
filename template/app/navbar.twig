<nav class="navbar sticky-top col">
    <a class="navbar-brand" href="{{ mainHref }}">
        <img src="{{ logopath }}" height="30" alt="{{ vendorName }}">
    </a>

    {% if contextless == false %}
        <div class="btn-group">
            <button type="button"
                    class="btn dropdown-toggle"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                    data-target="#navbarDropdown"
            >
                <img src="{{ userImage }}" class="avatar">
            </button>
            <div id="navbarDropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                {% for partId, partEntry in settings %}
                    {% for id, entry in partEntry.getEntries() %}

                        <li><a class="dropdown-item d-flex flex-row" href="{{ baseURL }}/{{ entry.getName()|lower }}">
                                <i class="{{ entry.getFaClass() }} fa-1x align-self-center justify-content-center text-center ml-1 icon"></i>
                                <div class="name">&nbsp;{{ entry.getName() }}</div>
                            </a>
                        </li>
                    {% endfor %}

                {% endfor %}
            </div>
        </div>
    {% endif %}
</nav>
