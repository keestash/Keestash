<nav class="navbar sticky-top col">
    <a class="navbar-brand" href="{{ mainHref }}">
        <img src="{{ logopath }}" height="30" alt="{{ vendorName }}">
    </a>

    {% if contextless == false %}
        <div class="btn-group">
            <button type="button"
                    class="btn dropdown-toggle"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                    data-target="#navbarDropdown"
            >
                <img src="{{ userImage }}" class="avatar">
            </button>
            <div id="navbarDropdown" class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                {% for route, data in partEntry.getEntries() %}
                    <li><a class="dropdown-item d-flex flex-row" href="{{ baseURL }}/{{ route|lower }}">
                            <i class="{{ data.faClass }} fa-1x align-self-center justify-content-center text-center ml-1 icon"></i>
                            <div class="name">&nbsp;{{ data.name }}</div>
                        </a>
                    </li>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</nav>
