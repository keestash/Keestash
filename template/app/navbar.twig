<nav class="navbar sticky-top col">
    <a class="navbar-brand" href="{{ mainHref }}">
        <img src="{{ logopath }}" height="30" alt="{{ vendorName }}">
    </a>

    {% if contextless == false %}
        <div class="btn-group">
            <button type="button"
                    class="btn dropdown-toggle"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                    id="main-menu-dropdown-button"
            >
                <img src="{{ userImage }}" class="avatar">
            </button>
            <div id="main-menu-dropdown-area" class="dropdown-menu dropdown-menu-right"
                 aria-labelledby="navbarDropdown">
                {% for data in settings %}
                    <li><a class="dropdown-item d-flex flex-row justify-content-start pl-2"
                           href="{{ data.compiled|lower }}">
                            <div class="align-self-center">
                                <i class="{{ data.faClass }} fa-1x align-self-center justify-content-center text-center ml-1 icon"></i>
                            </div>
                            <div class="align-self-start pl-2">
                                <div class="name">&nbsp;{{ data.name }} </div>
                            </div>
                        </a>
                    </li>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</nav>
