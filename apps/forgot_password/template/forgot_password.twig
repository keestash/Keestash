<div class="main-wrapper forgot-password">
    <div class="forgot-password-wrapper d-flex no-block justify-content-center align-items-center"
         style="
                 background:url({{ backgroundPath }}) no-repeat center center fixed;
                 -webkit-background-size: cover;
                 -moz-background-size: cover;
                 -o-background-size: cover;
                 background-size: cover;
                 ">

        <div class="formbox">
            <div id="forgot-password-form" class="ks-form">
                <div class="logo">
                    <span class="db"><img id="logo-image" height="30px" src="{{ logoPath }}" alt="logo"/></span>
                    <h5 class="font-medium mb-3">{{ loginToApp }}</h5>
                </div>
                <!-- Form -->
                <div class="row">
                    <div class="col-12">
                        <form class="form-horizontal mt-3" id="forgot_password_form">
                            <div class="input-group mb-3">
                                <div class="d-flex">
                                        <span class="input-group-text icon-wrapper" id="basic-username"><i
                                                    class="far fa-user"></i></span>
                                </div>
                                <input type="text"
                                       id="fp__input"
                                       class="form-control form-control-lg input-control"
                                       placeholder="{{ usernameOrPasswordPlaceholder }}"
                                       aria-label="{{ usernameOrPasswordPlaceholder }}"
                                       aria-describedby="basic-username"
                                >
                            </div>
                            <div class="form-group text-center">
                                <div class="col-xs-12 pb-3 d-flex">
                                    <button id="fp__reset"
                                            class="btn btn-primary btn-lg flex-grow-1"
                                            type="submit">
                                        {{ resetPassword }}
                                    </button>
                                </div>
                            </div>
                            <div class="form-group mb-0 mt-2">
                                {% if registeringEnabled == true %}
                                    <div class="col-sm-12 text-center">
                                        {{ createNewAccountText }} <a href="{{ newAccountLink }}"
                                                {% if newTab %}
                                                    target="_blank"
                                                {% endif %}
                                                                      class="ml-1"><b>{{ createNewAccountActionText }}</b></a>
                                    </div>
                                {% endif %}

                                <div class="col-sm-12 text-center">
                                    <a href="{{ backToLoginLink }}"
                                       class="ml-1"><b>{{ backToLogin }} </b></a>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

