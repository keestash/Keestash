<div class="main-wrapper register">
    <div class="register-wrapper d-flex no-block justify-content-center align-items-center"
         style="
                 background:url({{ backgroundPath }}) no-repeat center center fixed;
                 -webkit-background-size: cover;
                 -moz-background-size: cover;
                 -o-background-size: cover;
                 background-size: cover;
                 ">
        <form class="register-box" id="register--box">
            <div class="logo">
                <span class="db"><img id="logo-image" height="30px" src="{{ logoPath }}" alt="logo"/></span>
                <h5 class="font-medium mb-3">{{ createNewAccount }}</h5>
                <span>{{ createNewAccountDesc }}</span>
            </div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input id="first_name" name="first_name" class="form-control" placeholder="{{ firstNamePlaceholder }}"
                       aria-label="{{ firstNamePlaceholder }}" type="text" required>
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input name="last_name" id="last_name" class="form-control" placeholder="{{ lastNamePlaceholder }}"
                       aria-label="{{ lastNamePlaceholder }}" type="text" required>
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input name="user_name" id="user_name" class="form-control" placeholder="{{ userNamePlaceholder }}"
                       aria-label="{{ userNamePlaceholder }}" type="text" required>
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                <input name="email" id="email" class="form-control" placeholder="{{ emailPlaceholder }}"
                       aria-label="{{ emailPlaceholder }}" type="email" required>
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                </div>
                <select class="custom-select" id="phone_prefix" name="phone_prefix" style="max-width: 120px;">
                    <option selected="">+49</option>
                    <option value="1">+90</option>
                    <option value="2">+44</option>
                    {# TODO add more #}
                </select>
                <input name="phone" id="phone" class="form-control" placeholder="{{ phonePlaceholder }}"
                       aria-label="{{ phonePlaceholder }}" type="text">
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fab fa-chrome"></i> </span>
                </div>
                <input name="website" id="website" class="form-control" placeholder="{{ websitePlaceholder }}"
                       aria-label="{{ websitePlaceholder }}" type="text">
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input id="password" name="password" class="form-control" placeholder="{{ passwordLabel }}"
                       aria-label="{{ passwordLabel }}"
                       type="password" required>
            </div> <!-- form-group// -->
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input class="form-control" placeholder="{{ passwordRepeatLabel }}" id="password_repeat"
                       name="password_repeat"
                       aria-label="{{ passwordRepeatLabel }}" type="password" required>
            </div> <!-- form-group// -->
            <div class="input-group mb-3">
                <div class="form-check">
                    <input type="checkbox" class="form-check-input"
                           id="terms_and_conditions" required>
                    <label class="form-check-label" for="terms_and_conditions">{{ termsConditionsFirstPart }}
                        <a
                                href="{{ termsConditionsLink }}"
                                {% if newTab %}
                                    target="_blank"
                                {% endif %}
                        >{{ termsAndConditions }}</a></label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block"> {{ submit }}  </button>
            </div> <!-- form-group// -->
            <p class="text-center">{{ backToLoginQuestion }}<a href="{{ backToLoginLink }}"
                        {% if newTab %}
                            target="_blank"
                        {% endif %}
                >{{ backToLogin }}</a></p>
        </form>
    </div>
</div>
