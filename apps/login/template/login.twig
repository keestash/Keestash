<div class="main-wrapper login">
    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center"
         style="
                 background:url({{ backgroundPath }}) no-repeat center center fixed;
                 -webkit-background-size: cover;
                 -moz-background-size: cover;
                 -o-background-size: cover;
                 background-size: cover;
                 ">
        <div class="auth-box">
            <div id="loginform-wrapper" class="ks-form">
                <div class="logo">
                    <span class="db"><img id="logo-image" height="30px" src="{{ logoPath }}" alt="logo"/></span>
                    <h5 class="font-medium mb-3">{{ loginToApp }}</h5>
                </div>
                <!-- Form -->
                <div class="row">
                    <div class="col-12">
                        <form class="form-horizontal mt-3" id="loginform">
                            <div class="input-group mb-3">
                                <div class="d-flex">
                                    <span class="icon-wrapper input-group-text" id="username-input"><i
                                                class="far fa-user"></i></span>
                                </div>
                                <input type="text"
                                       id="username"
                                       class="form-control form-control-lg input-control"
                                       placeholder="{{ userNamePlaceholder }}"
                                       aria-label="{{ userNamePlaceholder }}" aria-describedby="username-input"
                                >
                            </div>
                            <div class="input-group mb-3">
                                <div class="d-flex">
                                    <span class="input-group-text icon-wrapper" id="password-input"><i
                                                class="fas fa-pen"></i></span>
                                </div>
                                <input type="password"
                                       id="password"
                                       class="form-control form-control-lg input-control"
                                       placeholder="{{ passwordPlaceholder }}"
                                       aria-label="{{ passwordPlaceholder }}" aria-describedby="password-input"
                                >
                            </div>
                            <div class="form-group text-center">
                                <div class="col-xs-12 pb-3 d-flex">
                                    <button id="sign__in" class="btn btn-primary btn-lg flex-grow-1"
                                            type="submit">{{ signIn }}</button>
                                </div>
                            </div>
                            {% if registeringEnabled == true %}
                                <div class="form-group mb-0 mt-2">
                                    <div class="col-sm-12 text-center">
                                        {{ createNewAccountText }} <a href="{{ newAccountLink }}"
                                                                      {% if newTab %}
                                                                      target="_blank"
                                                                      {% endif %}
                                                                      class="ml-1"><b>{{ createNewAccountActionText }}</b></a>
                                    </div>
                                </div>
                            {% endif %}
                            <div class="form-group mb-0 mt-2">
                                <div class="col-sm-12 text-center">
                                    {{ forgotPasswordText }} <a href="{{ forgotPasswordLink }}"
                                            {% if newTab %}
                                                target="_blank"
                                            {% endif %}
                                                                class="ml-1"><b>{{ forgotPasswordActionText }}</b></a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
