<div class="d-flex flex-column justify-content-start align-self-center flex-grow-1 align-self-stretch keestash-about">
    <div class="application-image d-flex justify-content-center flex-column align-items-center">
        <img src="{{ image.logoPath }}" class="img-fluid" alt="{{ image.altName }}">
    </div>
    <h3 class="black align-items-center align-self-center justify-content-center text-center">{{ product.headline }}</h3>
    <div class="d-flex justify-content-center flex-column align-items-center text-center grey-dark">
        {{ product.description }}
    </div>
    <div class="d-flex justify-content-around pt-5">
        <div class="d-flex flex-column justify-content-center align-items-center info-chip text-center">
            <i class="fas fa-globe-americas fa-3x mb-3 theme-color"></i>
            <h6>{{ product.global }}</h6>
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center info-chip text-center">
            <i class="fas fa-share-alt fa-3x mb-3 theme-color"></i>
            <h6>{{ product.openStandard }}</h6>
        </div>
    </div>
    <div class="d-flex justify-content-around pt-5">
        <div class="d-flex flex-column justify-content-center align-items-center info-chip">
            <i class="fab fa-osi fa-3x mb-3 theme-color"></i>
            <h6>{{ product.openSource }}</h6>
        </div>
    </div>
    <div class="d-flex justify-content-around pt-5">
        <h3 class="black">{{ interested.headline }}</h3>
    </div>
    <div class="d-flex justify-content-center flex-column align-items-center">
        <div class="container text-center">
            {{ interested.description }}
        </div>
    </div>
    <div class="d-flex justify-content-around pt-5">
        <div class="d-flex flex-column justify-content-center align-items-center info-chip">
            <i class="fas fa-phone fa-3x mb-3 theme-color"></i>
            <h6 class="black">{{ interested.letstalk.headline }}</h6>
            <div class="pt-2">
                <a href="{{ interested.letstalk.website.href }}"
                   target="_blank">{{ interested.letstalk.website.name }}</a>
            </div>
            <div class="pt-2">
                <a href="tel:{{ interested.letstalk.phone.href }}"
                   target="_blank">{{ interested.letstalk.phone.name }}</a>
            </div>
            <div class="pt-2">
                <a href="mailto:{{ interested.letstalk.email.href }}"
                   target="_blank">{{ interested.letstalk.email.name }}</a>
            </div>
        </div>
        <div class="d-flex flex-column justify-content-center align-items-center info-chip">
            <i class="fas fa-mobile fa-3x mb-3 theme-color"></i>
            <h6 class="black">{{ interested.socialmedia.headline }}</h6>
            <div class="pt-2">
                <a href="{{ interested.socialmedia.twitter.href }}"
                   target="_blank">
                    <i class="fab fa-twitter"></i>
                </a>
            </div>
            <div class="pt-2">
                <a href="{{ interested.socialmedia.facebook.href }}"
                   target="_blank">
                    <i class="fab fa-facebook-f"></i>
                </a>
            </div>
            <div class="pt-2">
                <a href="{{ interested.socialmedia.linkedin.href }}"
                   target="_blank">
                    <i class="fab fa-linkedin-in"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-around pt-5">
        <h3 class="black">{{ whitepaper.headline }}</h3>
    </div>
    <div class="d-flex justify-content-center flex-column align-items-center">
        <div class="container text-center">
            {{ whitepaper.description }}
        </div>
    </div>
    <div class="d-flex flex-column justify-content-center container pt-5 pb-5">
        <a class="d-flex" href="{{ whitepaper.productAndServices.english.link }}">
            <i class="fas fa-file-alt fa-3x error"></i>
            <div class="ml-3 d-flex flex-column">
                <div class="black">{{ whitepaper.productAndServices.english.name }}</div>
                <div class="grey-dark small">{{ whitepaper.productAndServices.english.language }}</div>
                <div class="grey-dark small">{{ whitepaper.productAndServices.english.version }}</div>
            </div>
        </a>
        <a class="d-flex" href="{{ whitepaper.productAndServices.german.link }}">
            <i class="fas fa-file-alt fa-3x error"></i>
            <div class="ml-3 d-flex flex-column">
                <div class="black">{{ whitepaper.productAndServices.german.name }}</div>
                <div class="grey-dark small">{{ whitepaper.productAndServices.german.language }}</div>
                <div class="grey-dark small">{{ whitepaper.productAndServices.german.version }}</div>
            </div>
        </a>
    </div>
</div>
</div>